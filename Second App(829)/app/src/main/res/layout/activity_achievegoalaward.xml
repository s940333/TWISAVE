<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="存錢扭蛋獎勵"
        android:id="@+id/textView15"
        android:layout_gravity="center_horizontal"
        android:textSize="26sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eac752">

        <RelativeLayout
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="674dp"
                android:layout_height="476dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/beer"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜你獲得______優惠，優惠碼是______"
                android:textSize="26sp"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/imageButton2"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:background="#ffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="96dp"
                android:layout_height="58dp"
                android:textColor="#FFFFFF"
                android:id="@+id/button2"
                android:background="@drawable/menu_long_1" />

            <Button
                android:layout_width="96dp"
                android:layout_height="58dp"
                android:textColor="#FFFFFF"
                android:id="@+id/button"
                android:background="@drawable/menu_long_2" />

            <Button
                android:layout_width="96dp"
                android:layout_height="58dp"
                android:textColor="#FFFFFF"
                android:id="@+id/button3"
                android:background="@drawable/menu_long_3" />

            <Button
                android:layout_width="96dp"
                android:layout_height="58dp"
                android:textColor="#FFFFFF"
                android:id="@+id/button4"
                android:background="@drawable/menu_long_4" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>